<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="5.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="230.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="230.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="-Infinity" prefHeight="300.0" valignment="TOP" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <ListView fx:id="topicsListView" maxHeight="400.0" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0">
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </ListView>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.columnIndex="1">
         <children>
            <Button fx:id="addTopicButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#showAddTopicDialog" prefWidth="60.0" text="Add" />
            <Button fx:id="editTopicButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#showEditTopicDialog" prefWidth="60.0" text="Edit" />
            <Button fx:id="deleteTopicButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#showDeleteConfirmationDialog" prefWidth="60.0" text="Delete" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
